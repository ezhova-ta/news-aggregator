<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.news_entry_list.NewsEntryListActivity"
    android:orientation="vertical" >

    <Button
        android:id="@+id/updateNewsEntryListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onUpdateNewsEntryListButtonClick"
        android:text="@string/update_news_entry_list_button_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/newsEntryList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />
</LinearLayout>